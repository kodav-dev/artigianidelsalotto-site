---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { Image } from "astro:assets";
import marfcodizzato from "../assets/marfcode/marfcodizzato.webp";

interface Props {
	lang?: "it" | "en";
}

const { lang: propLang } = Astro.props;
const currentYear = new Date().getFullYear();
const lang = propLang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-black py-20">
	<div class="container mx-auto px-6 lg:px-20">
		<div class="flex flex-col items-center justify-center gap-12">
			<!-- Marfcode Branding -->
			<div class="flex flex-col items-center gap-6 w-full">
				<a
					href="https://marfcode.it"
					target="_blank"
					rel="noopener noreferrer"
					class="block transition-opacity opacity-80 hover:opacity-100"
				>
					<Image
						src={marfcodizzato}
						alt="marfcode.it | Dev and Digital Agency"
						class="w-32 h-auto"
						loading="lazy"
					/>
				</a>
				<p
					class="text-[10px] uppercase tracking-[0.3em] text-white/20 text-center"
				>
					&copy; {currentYear} Artigiani del Salotto. Proudly <a
						href="https://marfcode.it"
						target="_blank"
						class="hover:text-white transition-colors"
						>MARFCODizzato</a
					>
				</p>
			</div>
		</div>
	</div>
</footer>
