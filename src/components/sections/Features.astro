---
import { useTranslations } from "@/i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);

const features = [
    {
        label: t("home.features.madeInItaly"),
        desc: t("home.features.madeInItalyDesc"),
        icon: "flag",
    },
    {
        label: t("home.features.bespoke"),
        desc: t("home.features.bespokeDesc"),
        icon: "scissors",
    },
    {
        label: t("home.features.factoryPrice"),
        desc: t("home.features.factoryPriceDesc"),
        icon: "tag",
    },
    {
        label: t("home.features.warranty"),
        desc: t("home.features.warrantyDesc"),
        icon: "shield",
    },
];
---

<section class="bg-[#f0ede4] py-20">
    <div class="container mx-auto px-6 lg:px-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                features.map((feature, i) => (
                    <div class="bg-white p-10 flex flex-col items-center text-center gap-6 shadow-sm border border-[#e5e1d5]">
                        <div class="w-12 h-12 flex items-center justify-center text-slate-800">
                            {feature.icon === "flag" && (
                                <div class="flex flex-col w-8 h-5 border border-slate-100 gap-[1px]">
                                    <div class="flex-1 bg-[#009246]" />
                                    <div class="flex-1 bg-white" />
                                    <div class="flex-1 bg-[#CE2B37]" />
                                </div>
                            )}
                            {feature.icon === "scissors" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-8 h-8"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="1.2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M7.848 8.25l1.536.887M7.848 8.25a3 3 0 11-5.196-3 3 3 0 015.196 3zm1.536.887a2.165 2.165 0 011.083 1.839c.005.351.054.695.14 1.024M9.384 9.137l2.077 1.199M7.848 15.75l1.536-.887m-1.536.887a3 3 0 11-5.196 3 3 3 0 015.196-3zm1.536-.887a2.165 2.165 0 001.083-1.838c.005-.352.054-.695.14-1.025m-1.223 2.863l2.077-1.199m0-3.328a4.323 4.323 0 012.068-1.379l5.325-1.628a4.5 4.5 0 012.48-.044l.803.215-7.794 4.5m-2.882-1.664A4.331 4.331 0 0010.607 12m3.736 0l7.794 4.5-.802.215a4.5 4.5 0 01-2.48-.043l-5.326-1.629a4.324 4.324 0 01-2.068-1.379M14.343 12l-2.882 1.664"
                                    />
                                </svg>
                            )}
                            {feature.icon === "tag" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-8 h-8"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="1.2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"
                                    />
                                    <circle
                                        cx="12"
                                        cy="12"
                                        r="3"
                                        stroke="currentColor"
                                        stroke-width="1.2"
                                    />
                                </svg>
                            )}
                            {feature.icon === "shield" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-8 h-8"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="1.2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
                                    />
                                </svg>
                            )}
                        </div>
                        <div class="flex flex-col gap-2">
                            <span class="text-sm font-bold tracking-tight text-slate-900">
                                {feature.label}
                            </span>
                            <span class="text-[11px] text-slate-400 font-medium">
                                {feature.desc}
                            </span>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
