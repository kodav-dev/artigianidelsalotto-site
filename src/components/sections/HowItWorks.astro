---
import { useTranslations } from "@/i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);

const steps = t("home.howItWorks.steps");
---

<section id="how-it-works" class="bg-white py-32">
	<div class="container mx-auto px-6 lg:px-20">
		<div class="text-center mb-24">
			<span class="text-[11px] uppercase tracking-[0.4em] font-medium text-slate-400 mb-4 block">
				{t("home.howItWorks.label")}
			</span>
			<h2 class="text-5xl md:text-6xl lg:text-[72px] font-bold text-slate-900 mb-6">
				{t("home.howItWorks.title")}
			</h2>
			<p class="text-slate-500 text-lg max-w-2xl mx-auto">
				{t("home.howItWorks.subtitle")}
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			{steps.map((step: any, index: number) => (
				<div class="bg-[#f0ede4] p-10 flex flex-col items-center text-center group">
					<!-- Step Number -->
					<div class="w-10 h-10 bg-white/50 rounded-full flex items-center justify-center mb-8 text-[11px] font-bold text-slate-400">
						0{index + 1}
					</div>

					<h3 class="text-lg font-bold text-slate-900 mb-4">
						{step.title}
					</h3>
					<p class="text-[13px] text-slate-500 leading-relaxed">
						{step.desc}
					</p>
				</div>
			))}
		</div>
	</div>
</section>
