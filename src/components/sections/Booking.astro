---
import { useTranslations } from "@/i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="booking" class="bg-white py-32 lg:py-48">
    <div class="container mx-auto px-6 lg:px-20">
        <!-- Header -->
        <div class="text-center mb-32">
            <span
                class="text-[11px] uppercase tracking-[0.4em] font-medium text-slate-400 mb-6 block"
            >
                PARLIAMONE
            </span>
            <h2
                class="text-5xl md:text-6xl lg:text-[72px] font-bold text-slate-900 mb-6"
            >
                {t("home.booking.title")}
            </h2>
            <p class="text-slate-500 text-lg">
                {t("home.booking.subtitle")}
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-20 lg:gap-32">
            <!-- Left: Info -->
            <div class="lg:col-span-4 flex flex-col gap-12">
                <h3 class="text-2xl font-bold text-slate-900 mb-4">
                    Informazioni
                </h3>

                <div class="flex flex-col gap-10">
                    <!-- Indirizzo -->
                    <div class="flex items-start gap-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-slate-900 mt-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="1"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                            ></path>
                        </svg>
                        <div class="flex flex-col gap-1">
                            <span class="text-sm font-bold text-slate-900"
                                >Indirizzo</span
                            >
                            <p
                                class="text-[15px] text-slate-500 leading-relaxed"
                            >
                                {t("footer.address")}<br />{t("footer.city")}
                            </p>
                        </div>
                    </div>

                    <!-- Telefono -->
                    <div class="flex items-start gap-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-slate-900 mt-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="1"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                            ></path>
                        </svg>
                        <div class="flex flex-col gap-1">
                            <span class="text-sm font-bold text-slate-900"
                                >Telefono</span
                            >
                            <div
                                class="text-[15px] text-slate-500 flex flex-col"
                            >
                                <a
                                    href={`tel:${t("footer.phoneFixed")}`}
                                    class="hover:text-slate-900 transition-colors tracking-wide"
                                    >{t("footer.phoneFixed")}</a
                                >
                                <a
                                    href={`tel:${t("footer.phoneMobile")}`}
                                    class="hover:text-slate-900 transition-colors tracking-wide"
                                    >{t("footer.phoneMobile")}</a
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start gap-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-slate-900 mt-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="1"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                            ></path>
                        </svg>
                        <div class="flex flex-col gap-1">
                            <span class="text-sm font-bold text-slate-900"
                                >Email</span
                            >
                            <a
                                href={`mailto:${t("footer.email")}`}
                                class="text-[15px] text-slate-500 hover:text-slate-900 transition-colors"
                                >{t("footer.email")}</a
                            >
                        </div>
                    </div>

                    <!-- Orari -->
                    <div class="flex items-start gap-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-slate-900 mt-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="1"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <div class="flex flex-col gap-1">
                            <span class="text-sm font-bold text-slate-900"
                                >Orari</span
                            >
                            <p
                                class="text-[15px] text-slate-500 leading-relaxed"
                            >
                                {t("footer.hours")}<br />{t("footer.hoursSat")}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right: Form -->
            <div id="booking-form-container" class="lg:col-span-8">
                <form
                    id="booking-form"
                    class="grid grid-cols-1 md:grid-cols-2 gap-10"
                >
                    <div class="flex flex-col gap-2">
                        <label
                            for="name"
                            class="text-xs font-bold text-slate-900 uppercase tracking-widest"
                            >{t("footer.form.name")} *</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            placeholder="Mario Rossi"
                            class="border-b border-slate-200 py-4 text-sm focus:border-slate-900 outline-none transition-all placeholder:text-slate-300"
                        />
                    </div>
                    <div class="flex flex-col gap-2">
                        <label
                            for="phone"
                            class="text-xs font-bold text-slate-900 uppercase tracking-widest"
                            >{t("footer.form.phone")} *</label
                        >
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            required
                            placeholder="+39 333 1234567"
                            class="border-b border-slate-200 py-4 text-sm focus:border-slate-900 outline-none transition-all placeholder:text-slate-300"
                        />
                    </div>
                    <div class="flex flex-col gap-2 md:col-span-2">
                        <label
                            for="email"
                            class="text-xs font-bold text-slate-900 uppercase tracking-widest"
                            >{t("footer.form.email")} *</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="mario.rossi@email.it"
                            class="border-b border-slate-200 py-4 text-sm focus:border-slate-900 outline-none transition-all placeholder:text-slate-300"
                        />
                    </div>
                    <div class="flex flex-col gap-2 md:col-span-2">
                        <label
                            for="message"
                            class="text-xs font-bold text-slate-900 uppercase tracking-widest"
                            >{t("footer.form.message")}</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="2"
                            placeholder="Raccontaci cosa stai cercando e quali sono le tue esigenze..."
                            class="border-b border-slate-200 py-4 text-sm focus:border-slate-900 outline-none transition-all placeholder:text-slate-300 resize-none"
                        ></textarea>
                    </div>

                    <div class="md:col-span-2 flex flex-col gap-8 mt-10">
                        <div class="flex items-start gap-4">
                            <input
                                type="checkbox"
                                id="privacy"
                                name="privacy"
                                required
                                class="mt-1 w-4 h-4 accent-slate-900 border-slate-300"
                            />
                            <label
                                for="privacy"
                                class="text-[12px] text-slate-400 leading-relaxed italic"
                            >
                                {t("footer.form.privacyNote")}
                            </label>
                        </div>

                        <div class="flex items-center justify-between">
                            <p class="text-[11px] text-slate-400">
                                * {
                                    lang === "it"
                                        ? "I campi contrassegnati sono obbligatori"
                                        : "Required fields"
                                }
                            </p>
                            <button
                                type="submit"
                                class="bg-black text-white px-12 py-5 text-sm font-bold uppercase tracking-[0.2em] hover:bg-slate-800 transition-all"
                            >
                                {t("home.booking.cta")}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
