---
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
    getLangFromUrl,
    useTranslations,
    getLocalizedPath,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = getLocalizedPath("/contact", lang);
---

<BaseLayout
    title={t("contact.seo.title")}
    description={t("contact.seo.description")}
    lang={lang}
    currentPath={currentPath}
>
    <main class="container mx-auto px-6 pt-32 pb-24 text-center">
        <h1 class="text-5xl font-bold mb-8">
            {t("contact.title")}
            {t("contact.together")}
        </h1>
        <p
            class="text-xl text-slate-600 dark:text-gray-400 max-w-2xl mx-auto mb-12"
        >
            {t("contact.subtitle")}
        </p>

        <div
            class="max-w-xl mx-auto bg-white dark:bg-white/5 p-8 border border-slate-200 dark:border-white/10 shadow-lg"
        >
            <div class="text-lg mb-4 flex flex-col gap-3">
                <a
                    href="tel:+390583088818"
                    class="hover:text-[#d9b130] transition-colors flex items-center gap-2 justify-center"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-[#d9b130]"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                        ></path></svg
                    >
                    <span>{t("footer.phoneFixed")}</span>
                </a>
                <a
                    href="tel:+393296752634"
                    class="hover:text-[#d9b130] transition-colors flex items-center gap-2 justify-center"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-[#d9b130]"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect x="5" y="2" width="14" height="20" rx="2" ry="2"
                        ></rect><line x1="12" y1="18" x2="12.01" y2="18"
                        ></line></svg
                    >
                    <span>{t("footer.phoneMobile")}</span>
                </a>
            </div>
            <p class="text-lg">
                <strong>Email:</strong> info@lacortedilaura.it
            </p>
        </div>
    </main>
</BaseLayout>
